<% provide(:title, 'Log In') %>
<h1 class="form-title">Log In</h1>
<div class="container user_form">
<%= form_for(:session, url: login_path) do |f|%>

  <%= f.label :email%>
  <%= f.text_field :email, class:'form-control form-custom'%>

  <%= f.label :password%>
  <%= f.password_field :password, class:  'form-control form-custom'%>

  <div class="actions">
    <%= f.submit "Login", class:'submitBtn' %>
  </div>

  <p class="signup_text">New user? <%= link_to "Sign up now!", signup_path %>

<%end%>
</div>
