<%= form_for(user) do |f| %>
  <h1 class="form-title">Sign Up</h1>
  <div class="container user_form">
  <%= render 'shared/error_messages' %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, class:'form-control form-custom' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, class:'form-control form-custom' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class:'form-control form-custom' %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, class:'form-control form-custom' %>
  </div>

  <div class="actions">
    <%= f.submit yield(:button), class:'submitBtn' %>
  </div>

<% end %>
</div>
